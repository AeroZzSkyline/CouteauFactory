{% trans_default_domain 'FOSUserBundle' %}


<div class="row" style="margin-top: 20px;margin-bottom: 20px;">
    <div class="col-md-6 col-md-offset-3">
        {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}

        <label for="username">Nom d'utilisateur</label>
        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'id': 'username', 'required': 'required'}})}}

        <label for="mail">Nom d'utilisateur</label>
        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'mail', 'required': 'required'}})}}

        <label for="password">Mot de passe</label>
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'id': 'password', 'required': 'required'}})}}
        <div style="margin-top:15px;">
            <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
        </div>

        {{ form_end(form) }}
    </div>
</div>