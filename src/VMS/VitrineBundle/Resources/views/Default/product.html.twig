{% extends "VMSVitrineBundle::layout.html.twig" %}

{% block title %}
{{ produit.getLibelleProduit() }} - {{ parent() }}
{% endblock %}

{% block vms_vitrinebody %}
    <div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">

            {% block sidebargauche %}
            <div class="col-md-4">
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Rechercher un produit</h2>
                    <form action="">
                        <input type="text" placeholder="Rechercher un produit...">
                        <input type="submit" value="Chercher">
                    </form>
                </div>
                <div class="single-sidebar">
                    <h2 class="sidebar-title">Dernier produits</h2>
                    {% for produit in listProduitAll %}
                    <div class="thubmnail-recent">
                        <a href="{{ path('vms_vitrine_vue', {'id' : produit.getId()}) }}"><img src="{{ asset('img/produits/' ~ produit.getImagePath()) }}" class="recent-thumb" alt=""></a>
                        <h2><a href="{{ path('vms_vitrine_vue', {'id' : produit.getId()}) }}">{{ produit.getLibelleProduit() }}</a></h2>
                        <div class="product-sidebar-price">
                            <ins>$700.00</ins>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endblock %}



            <div class="col-md-8">
                <div class="product-content-right">

                    {% block imagePlusDroite %}

                    <div class="product-breadcroumb">
                        <a href="{{ path('vms_accueil') }}">Accueil</a>
                        <a href="">Catégories</a>
                        <a href="">{{ produit.getLibelleProduit() }}</a>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="product-images">
                                <div class="product-main-img">
                                    <img src="{{ asset('img/produits/' ~ produit.getImagePath()) }}" alt="Image_Enormus">
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="product-inner">
                                <h2 class="product-name">{{ produit.getLibelleProduit() }}</h2>
                                <div class="product-inner-price">
                                    <ins>{{ produit.getPrix() }}.00€</ins>
                                </div>

                                <form action="" class="cart">
                                    <div class="quantity">
                                        <input type="number" size="4" class="input-text qty text" title="Qty" value="1" name="quantity" min="1" step="1">
                                    </div>
                                    <button class="add_to_cart_button" type="submit" href="">Ajouter au panier</button>
                                    <p>En stock : {{ produit.getStock() }} exemplaires </p>
                                </form>

                                <div class="product-inner-category">
                                    <p>Categorie: <a href="">Couteaux Papillons</a>
                                </div>

                                <div role="tabpanel">
                                    <ul class="product-tab" role="tablist">
                                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Avis</a></li>
                                    </ul>
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                                            <h2>Description du produit</h2>
                                            <p>{{ produit.getDescriptionProduit() }}</p>
                                            <h2>Caractéristiques</h2>
                                            <p>
                                                <ins>Nom</ins>:  {{ produit.getLibelleproduit() }}<br>
                                                <ins>Prix</ins>: {{ produit.getPrix() }}.00€<br>
                                                <ins>En stock</ins>: {{ produit.getstock() }} exemplaires<br>
                                                <ins>Taille</ins>: {{ produit.getTaille() }}cm<br>
                                                <ins>Matériaux de la lame</ins>: {{ produit.getMateriauxLame() }}<br>
                                                <ins>Poids</ins>: {{ produit.getPoids() }}g<br>
                                                <ins>Origine</ins>: {{ produit.getOrigine() }}
                                            </p>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="profile">
                                            <h2>Votre avis</h2>
                                            <div class="submit-review">
                                                <p><label for="name">Nom</label> <input name="name" type="text"></p>
                                                <p><label for="email">Email</label> <input name="email" type="email"></p>
                                                <div class="rating-chooser">
                                                    <p>Votre note</p>
                                                    <div class="rating-wrap-post">
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                        <i class="fa fa-star"></i>
                                                    </div>
                                                </div>
                                                <p><label for="review">Commentaire</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                                <p><input type="submit" value="Envoyer"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    {% endblock %}

                    {% block produitsEnRapport %}
                    <div class="related-products-wrapper">
                        <h2 class="related-products-title">Produits de la même catégorie</h2>
                        <div class="related-products-carousel">

                            {% for produit in listProduitSameCategorie %}
                            <div class="single-product">
                                <div class="product-f-image">
                                    <img src="{{ asset('img/produits/' ~ produit.getImagePath()) }}" alt="" style="height: 160px">
                                    <div class="product-hover">
                                        <a href="" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Ajouter au panier</a>
                                        <a href="" class="view-details-link"><i class="fa fa-link"></i> Détails</a>
                                    </div>
                                </div>
                                <h2><a href="{{ path('vms_vitrine_vue', {id: produit.getId() }) }}">{{ produit.getLibelleProduit }}</a></h2>
                                <div class="product-carousel-price">
                                    <ins>{{ produit.getPrix() }}.00€</ins>
                                </div>
                            </div>
                            {% endfor %}


                        </div>
                    </div>
                    {% endblock %}

                </div>
            </div>

        </div>
    </div>
    </div>
{% endblock %}


