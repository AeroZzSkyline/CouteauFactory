                                    </form>
                                    <form action="{{ path('vms_cart_add', {'id': product.getId()}) }}" class="cart" method="get">
                                        <div class="quantity">
                                            <input type="number" size="4" class="input-text qty text" title="Qty" value="{{ cart[product.getId()] }}" name="quantity" min="1" max="{{ product.getStock() }}" step="1">
