                        <h2>Total du pannier</h2>

                        <table cellspacing="0">
                            <tbody>
                            <tr class="cart-subtotal">
                                <th>Total HT</th>
                                <td><span class="amount">{{ totalHT }}.00€</span></td>
                            </tr>

                            <tr class="shipping">
                                <th>Livraison</th>
                                <td>Gratuite</td>
                            </tr>

                            <tr class="TVA">
