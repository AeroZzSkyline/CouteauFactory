                                    <input type="submit" value="Appliquer" name="apply_coupon" class="button">
                                </div>
                                <button onclick="window.location.href='{{  path('vms_cart_payment') }}'" style="float: right;" type="submit" name="proceed" class="checkout-button button alt wc-forward" href="">Passer au paiement</button>
